<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/base_layout"
    android:background="@color/abc_search_url_text_selected"
    android:textAlignment="center"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView android:text="@string/title_app" android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_text_size_display_2_material"
        android:id="@+id/title"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textColor="#fffff7f3"
        android:autoText="true"
        android:layout_below="@+id/textView3" />
    <EditText
        android:id="@+id/movie"
        android:layout_width="@dimen/abc_config_prefDialogWidth"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:inputType="text"
        android:backgroundTint="#ffffc000"
        android:background="#fff9e1e6"
        android:textColor="#ff060606"
        android:textColorHint="#f5a8a6a8"
        android:textSize="20sp"
        android:autoText="false"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/comment"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/comment"
        android:layout_width="@dimen/abc_config_prefDialogWidth"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:inputType="text"
        android:backgroundTint="#ffffc000"
        android:background="#fffff7e0"
        android:textColor="#ff060606"
        android:textColorHint="#ffb9b9b9"
        android:textSize="20sp"
        android:autoText="false"
        android:layout_above="@+id/recommend"
        android:layout_alignLeft="@+id/movie"
        android:layout_alignStart="@+id/movie"
        android:layout_marginBottom="15dp" />


    <Button
        android:layout_height="@dimen/abc_text_size_display_3_material"
        android:layout_width="@dimen/abc_panel_menu_list_width"
        android:text="@string/recommend"
        android:id="@+id/recommend"
        android:nestedScrollingEnabled="true"
        android:textSize="36dp"
        android:layout_above="@+id/view_list"
        android:layout_alignLeft="@+id/view_list"
        android:layout_alignStart="@+id/view_list"
        android:layout_marginBottom="17dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_height="@dimen/abc_text_size_display_4_material"
        android:layout_width="@dimen/abc_panel_menu_list_width"
        android:text="@string/view_movies"
        android:id="@+id/view_list"
        android:nestedScrollingEnabled="true"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_height="wrap_content"
        android:id="@+id/alert"
        android:textColor="#ffffff0b"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/movie"
        android:layout_alignStart="@+id/movie"
        android:layout_alignRight="@+id/movie"
        android:layout_alignEnd="@+id/movie"
        android:fontFamily="@android:string/VideoView_error_button"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_above="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:layout_above="@+id/comment"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Movie Name"
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:layout_above="@+id/movie"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Placinta Alexandru FAF-131"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/alert"
        android:layout_alignEnd="@+id/alert"
        android:textColor="#ff36ff14" />


</RelativeLayout>
